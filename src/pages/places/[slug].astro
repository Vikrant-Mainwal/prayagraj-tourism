---
import { attractions } from "../../data/attraction.js";
import Layout from "../../layouts/MainLayout.astro";
export function getStaticPaths() {
  return attractions.map((item) => ({
    params: { slug: item.slug },
    props: { place: item },
  }));
}

const { slug } = Astro.params;

// Find matching place
const place = attractions.find((p) => p.slug === slug);

if (!place) {
  throw new Error(`Place not found: ${slug}`);
}
---

<Layout title={place.title}>
  <section class="max-w-5xl mx-auto pt-28 pb-16 px-4">
    <img src={place.image.src} alt={place.title} class="w-full rounded-xl shadow-lg mb-10" />

    <h1 class="text-4xl font-bold mb-4">{place.title}</h1>
    <p class="text-lg text-gray-700 mb-3"><b>Location:</b> {place.location}</p>

    <p class="text-gray-600 text-lg mb-8">{place.description}</p>

    <a href="/places" class="text-blue-600 underline">‚Üê Back to all attractions</a>
  </section>
</Layout>
