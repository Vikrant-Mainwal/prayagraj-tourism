---
import Layout from "../../layouts/MainLayout.astro";
import { attractions } from "../../data/attraction.js";
import AttractionPage from '../../components/AttractionPage.jsx'

export function getStaticPaths() {
  return attractions.map((item) => ({
    params: { slug: item.slug },
    props: { place: item },
  }));
}

const { place } = Astro.props;

const reachText = `
• Air: Bamrauli Airport connects to major cities.
• Rail: Prayagraj Junction is one of India's busiest stations.
• Road: Well-connected via highways to Varanasi, Lucknow, Kanpur.
Local travel options: autos, e-rickshaws, taxis & app cabs.
`;
---

<Layout title={place.title}>

 <AttractionPage client:load place={place} howToReach={reachText} />


</Layout>
